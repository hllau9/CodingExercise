
@{
    ViewBag.Title = "UserListApiVersion";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" />

<h2>List of Users (API)</h2>

<table id="users" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>






<script>
    $(document).ready(function () {
        $.ajax({
            url: '/api/User',
            method: 'GET',
            dataType: 'json',
            contentType: 'application/json',
            success: function (res) {
                var table = $('#users').DataTable({
                    aaData: res,
                    "aoColumns": [
                        { "mData": "Id", "sClass": "center" },
                        { "mData": "FirstName", "sClass": "center" },
                        { "mData": "LastName", "sClass": "center" },
                        { "mData": "RoleName", "sClass": "center" },
                        { "mData": "Email", "sClass": "center" },
                        { "mData": "Phone", "sClass": "center" }
                    ],
                    iDisplayLength: 10,
                    dom: 'Bfrtip',
                    buttons: [
                        'excelHtml5',
                        'pdfHtml5'
                    ],
                });
                table.on('order.dt search.dt', function () {
                    table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }).draw();
            }
        });
    });
</script>